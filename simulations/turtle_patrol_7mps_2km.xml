<?xml version="1.0" encoding="UTF-8"?>
<!--
Turtle Mobility Script for Rescue Node - 7km Square Patrol
- Speed: 7 m/s
- Starting position: FIXED at (1500, 8500) - top left corner
- Pattern: 7000m square clockwise patrol
-->
<movement>
    <!-- CRITICAL: Set fixed starting position at top left corner -->
    <set x="1500" y="1500"/>
    
    <!-- Set constant speed of 7 m/s -->
    <set speed="7"/>

    <!-- Square patrol pattern: 2000m x 2000m - repeat indefinitely -->
    <repeat count="0">
        <!-- Side 1: Go 2000m forward -->
        <forward d="7000"/>
        <!-- Turn 90 degrees to the right -->
        <turn angle="90"/>

        <!-- Side 2: Go 2000m forward -->
        <forward d="7000"/>
        <!-- Turn 90 degrees to the right -->
        <turn angle="90"/>

        <!-- Side 3: Go 2000m forward -->
        <forward d="7000"/>
        <!-- Turn 90 degrees to the right -->
        <turn angle="90"/>

        <!-- Side 4: Go 2000m forward (completes the square) -->
        <forward d="7000"/>
        <!-- Turn 90 degrees to the right (back to starting orientation) -->
        <turn angle="90"/>
    </repeat>
</movement>
